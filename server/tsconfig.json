{
  "compilerOptions": {
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": true,
    "outDir": "./build"
  },
  "include": ["src/**/*.ts", ".env", "src/tests/.gitkeep"],
  "exclude": ["node_modules"]
}
