  "compilerOptions": {
    "module": "CommonJS",
    "strict": true, 
    "esModuleInterop": true, 
    "sourceMap": true,
    "baseUrl": "src",
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true, 
    "outDir": "./build"
  },
  "include": ["src/**/*.ts"], 
  "exclude": ["node_modules"] 
}